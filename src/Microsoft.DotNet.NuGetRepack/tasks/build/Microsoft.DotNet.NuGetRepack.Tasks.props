<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <MicrosoftDotNetNuGetRepackTasksAssembly Condition="'$(MSBuildRuntimeType)' == 'core'">$(MSBuildThisFileDirectory)..\tools\netcoreapp2.1\$(MSBuildThisFileName).dll</MicrosoftDotNetNuGetRepackTasksAssembly>
    <MicrosoftDotNetNuGetRepackTasksAssembly Condition="'$(MSBuildRuntimeType)' != 'core'">$(MSBuildThisFileDirectory)..\tools\net472\$(MSBuildThisFileName).dll</MicrosoftDotNetNuGetRepackTasksAssembly>
  </PropertyGroup>

  <UsingTask TaskName="UpdatePackageVersionTask" AssemblyFile="$(MicrosoftDotNetNuGetRepackTasksAssembly)" />

</Project>
